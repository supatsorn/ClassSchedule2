<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:columnCount="4"
        android:rowCount="8"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="79dp"
           android:layout_gravity="fill_horizontal|top|left|bottom|right"
            android:text="monday"

            android:background="#F3F16F"
            android:textColor="#f5f2f2"
            android:textSize="25dp"
            android:id="@+id/mon"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="fill_horizontal|top|left|bottom|right"
            android:background="#FF78AD"
            android:textColor="#faf8f8"
            android:textSize="18dp"
            android:text="tuesday"
            android:id="@+id/tue"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:background="#71E096"
            android:textColor="#faf8f8"
            android:textSize="20dp"
           android:layout_gravity="top|left|bottom|fill_vertical|right"
            android:text="wednesday"
            android:id="@+id/wed"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="183dp"
            android:layout_height="206dp"
            android:background="#FFB875"
            android:textColor="#f9f6f6"
            android:textSize="20dp"
            android:gravity="center|center_horizontal"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="thursday"
            android:id="@+id/thu"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|left"
            android:layout_rowSpan="2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="#90E3F7"
            android:textColor="#fdfbfb"
            android:textSize="25dp"
            android:text="friday"
            android:id="@+id/fri"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left|bottom|right" />

        <Button
            android:layout_width="196dp"
            android:layout_height="98dp"
            android:background="#BB85E0"
            android:textSize="20dp"
            android:textColor="#faf8f8"
            android:text="saturday"
            android:id="@+id/sat"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="left|right|top|bottom|center" />

        <Button
            android:layout_width="189dp"
            android:layout_height="98dp"
            android:text="sunday"
            android:background="#ED665F"
            android:textSize="20dp"
            android:textColor="#f7f6f6"
            android:id="@+id/sun"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_gravity="top|left|bottom|right"
            android:layout_margin="0.1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cal"
            android:id="@+id/cal"
            android:layout_row="7"
            android:layout_column="0" />

    </GridLayout>
    </LinearLayout>
</ScrollView>